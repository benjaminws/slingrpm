#!/usr/bin/env python

import zmq

def send_msg_get_rsp(port, msg):
  context = zmq.Context()
  socket = context.socket(zmq.REQ)
  socket.connect('tcp://%s:%s' % ('127.0.0.1', port))
  socket.send_pyobj(msg)
  resp = socket.recv_pyobj()
  socket.close()
  return resp 

if __name__ == "__main__":
  msg = {'body': "ALIVE?"}
  print send_msg_get_rsp(64666, msg)
